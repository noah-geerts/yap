{
  "compilerOptions": {
    "target": "ES2022", // modern JS output
    "module": "nodenext", // emit ESM import/export
    "moduleResolution": "nodenext", // resolves imports like Node
    "outDir": "dist", // compiled JS output folder
    "rootDir": "src", // your TS source folder
    "esModuleInterop": true, // allows default imports from CJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
